apiVersion: argoproj.io/v1alpha1
kind: ApplicationSet
metadata:
  name: cicd-bootstrap
  namespace: argocd
spec:
  syncPolicy:
    preserveResourcesOnDeletion: true
  generators:
  - list:
      elements:
      - applicationurl: https://github.com/dordavid015/argo.git
        apppath: bootstrap
        valuesfiles: "clusters/cicd/cicd-bootstrap-values.yaml"
        appname: cicd-bootstrap
      - applicationurl: https://github.com/dordavid015/argo.git
        apppath: paas
        valuesfiles: "clusters/cicd/cicd-paas-values.yaml"
        appname: cicd-paas
  template:
    metadata:
      name: "{{appname}}"
    spec:
      project: default
      source:
        repoURL: "{{applicationurl}}"
        targetRevision: main
        path: "{{apppath}}"
        helm:
          valueFiles:
            - "{{valuesfiles}}"
      destination:
        server: https://kubernetes.default.svc
        namespace: cicd
      syncPolicy:
        automated:
          prune: true
          selfHeal: true
